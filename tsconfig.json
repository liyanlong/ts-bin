{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "esnext"
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ]
}